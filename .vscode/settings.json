{
    "cmake.configureOnEdit": false,
    "cmake.configureOnOpen": false,
    "cmake.useCMakePresets": "always",
    "cmake.buildDirectory": "${workspaceFolder}/build/${buildPreset}",
    "C_Cpp.autoAddFileAssociations": false,
    "editor.formatOnSave": false,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "always"
    },
    "editor.tabSize": 4,
    "editor.detectIndentation": false,
    "files.exclude": {
      "**/node_modules": true,
      "**/dist": true
    },
    "peacock.color": "#AACCEE",
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#d5e5f6",
        "activityBar.background": "#d5e5f6",
        "activityBar.foreground": "#15202b",
        "activityBar.inactiveForeground": "#15202b99",
        "activityBarBadge.background": "#e37cae",
        "activityBarBadge.foreground": "#15202b",
        "commandCenter.border": "#15202b99",
        "sash.hoverBorder": "#d5e5f6",
        "statusBar.background": "#aaccee",
        "statusBar.foreground": "#15202b",
        "statusBarItem.hoverBackground": "#80b2e5",
        "statusBarItem.remoteBackground": "#aaccee",
        "statusBarItem.remoteForeground": "#15202b",
        "titleBar.activeBackground": "#aaccee",
        "titleBar.activeForeground": "#15202b",
        "titleBar.inactiveBackground": "#aaccee99",
        "titleBar.inactiveForeground": "#15202b99"
    },
    "terminal.integrated.scrollback": 100000
}
  